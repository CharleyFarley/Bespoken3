<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Experience in years</th>
      <th>Formally trained</th>
      <th>Review rating</th>
      <th>Days to delivery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.avatar %></td>
        <td><%= artist.experience_in_years %></td>
        <td><%= artist.formally_trained %></td>
        <td><%= artist.review_rating %></td>
        <td><%= artist.days_to_delivery %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

